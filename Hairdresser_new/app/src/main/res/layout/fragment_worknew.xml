<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorknewFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/bookingUser"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:duration="@android:integer/config_longAnimTime" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/cardview_row"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/money_svgrepo_com" />


                    <TextView
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_light"
                        android:text="ค่ารับบริการที่ได้รับ"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_light"
                        android:text="350.00 ฿"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_weight="1"
            android:background="@drawable/cardview"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_light"
                        android:text="บริการทันที"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_light"
                        android:text="วันที่ 16 ตุลาคม 2564  13.00 น."
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_light"
                        android:text="สถานที่ บ้านประยุทธ กทม."
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mitr_light"
                        android:text="- ตัดผมชาย เด็ก"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/mitr_light"
                        android:text="- ตัดสระซอย"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="82dp"
            android:layout_height="37dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:background="@drawable/left_side" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/mitr_light"
            android:gravity="end"
            android:text="0.0 กม."
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


</LinearLayout>